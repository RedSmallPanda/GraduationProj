<mapper namespace="NewsDao">
    <!-- statement，内容：sql语句。id：唯一标识，随便写，在同一个命名空间下保持唯一
       resultType：sql语句查询结果集的封装类型,tb_user即为数据库中的表
     -->
    <!--<select id="queryUserById" resultType="com.zpc.mybatis.pojo.User">-->
    <!--select * from tb_user where id = #{id}-->
    <!--</select>-->

    <!--使用别名-->
    <select id="queryNewsById" resultType="entity.News">
      select
       tnews.news_id as newsId,
       tnews.title,
       tnews.timestamp,
       tnews.feature
       from
       news tnews
       where tnews.news_id = #{id};
   </select>

    <select id="queryNewsAll" resultType="entity.News">
        select * from news;
    </select>

    <select id="queryNewsAllAfterTime" resultType="entity.News">
        select
          tnews.news_id as newsId,
          tnews.title,
          tnews.timestamp,
          tnews.feature
        from news tnews
        where tnews.timestamp > #{time};
    </select>

    <insert id="insertNews" parameterType="entity.News">
        INSERT INTO news (
        news_id,
        title,
        timestamp,
        feature
        )
        VALUES (
        #{newsId},
        #{title},
        #{timestamp},
        #{feature}
        );
    </insert>

